% Booleans
\newcommand{\bool}{\mathbb{B}}
% natural numbers
\newcommand{\nat}{\mathbb{N}}
% positive numbers
\newcommand{\posnat}{\nat_{{}>0}}
% integers
\newcommand{\ints}{\mathbb{Z}}
% rationals
\newcommand{\rats}{\mathbb{Q}}
% reals
\newcommand{\real}{\mathbb{R}}
% non-negative reals
\newcommand{\nnreal}{\real_{{}\geq 0}}
% power set; usage: $\Pow{S}$
\newcommand{\Pow}[1]{{\cal P}(#1)}
% function types; usage f:D\functo R for a total function
\newcommand{\functo}{\longrightarrow}
% usage f:D\partfuncto R for a partial function
\newcommand{\partfuncto}{\nrightarrow}
% floor and ceiling
\newcommand{\floor}[1]{\left\lfloor #1 \right\rfloor}
\newcommand{\ceiling}[1]{\left\lceil #1 \right\rceil}

%% set comprehension
% \setcpr{x}{p(x)}        delivers {x|p(x)}, the set of all x such
%                                            that p(x) holds
\newcommand{\setcpr}[2]{\left\{\thickspace #1 \medspace\left|\thickspace\medspace #2 \thinspace\right.\right\}}


%% first order logic (meta level)
\newcommand{\NOT}{\neg}
\newcommand{\AND}{\wedge}
\newcommand{\OR}{\vee}
\newcommand{\IMPLIES}{\Rightarrow}
\newcommand{\ISIMPLIED}{\Leftarrow}
\newcommand{\EQUIV}{\Leftrightarrow}
\newcommand{\ALL}[2]{\forall #1\left(#2\right)}
\newcommand{\EXI}[2]{\exists #1\left(#2\right)}
\newcommand{\TT}{\text{\bfseries 1}}
\newcommand{\FF}{\text{\bfseries 0}}

%% first order logic (syntax level)
\newcommand{\Prop}{\text{\itshape Prop}}
