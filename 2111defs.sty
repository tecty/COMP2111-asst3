\newcommand{\bigAnd}{\bigwedge}
\newcommand{\bigOr}{\bigvee}

%% toy language
% assignment symbol :=
\newcommand{\Ass}{\mathrel{:=}}
% keywords
%  need extra spacing in math mode
%  example: $\WHILE~b~\DO~x\Ass x+5~\OD$
\newcommand{\pPkey}[1]{\text{\normalfont\bfseries #1}}
\newcommand{\IF}{\pPkey{if}}
\newcommand{\THEN}{\pPkey{then}}
\newcommand{\ELSE}{\pPkey{else}}
\newcommand{\FI}{\pPkey{fi}}
\newcommand{\WHILE}{\pPkey{while}}
\newcommand{\DO}{\pPkey{do}}
\newcommand{\OD}{\pPkey{od}}

% substitution; usage \phi\subst{e}{x} yields \phi[e/x]
\newcommand{\subst}[2]{[^{#1}/_{#2}]}

%% Hoare triples
% usage \Htri{\phi}{P}{\psi} yields \{\phi\}P\{\psi\}
\newbox\htribox
\def\Htri#1#2#3{%
  \setbox\htribox=\hbox{$#1 #2 #3$}%
  \left\{#1\vrule width0pt height\ht\htribox depth\dp\htribox\right\}%
    {#2}%
  \left\{#3\vrule width0pt height\ht\htribox depth\dp\htribox\right\}%
  }
